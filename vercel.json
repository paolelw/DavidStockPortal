{
    "version": 2,
    "functions": {
        "api/*.py": {
            "runtime": "python3.9",
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "routes": [
        { "src": "/api/(.*)", "dest": "/api/index.py" },
        { "src": "/static/(.*)", "dest": "/static/$1", "headers": { "cache-control": "public, max-age=31536000, immutable" } },
        { "src": "/(.*)", "dest": "/index.html" }
    ],
    "env": {
        "PYTHONPATH": ".",
        "PIP_NO_CACHE_DIR": "1"
    }
} 